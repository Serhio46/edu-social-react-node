{
    "env": {
		"browser": true,
		"node": true,
      "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
		  "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
		  "prettier"
    ],
    "rules": {
		"react/jsx-filename-extension": [2, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
		"import/extensions": [
			"error",
			"ignorePackages",
			{
			  "js": "never",
			  "jsx": "never",
			  "ts": "never",
			  "tsx": "never"
			}
		]
	 },
	 "settings": {
		"import/resolver": {
		  "node": {
			 "extensions": [".js", ".jsx", ".ts", ".tsx"]
		  }
		}
	 }
 }

